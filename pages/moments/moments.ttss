}

.mdlist {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24rpx 60rpx;
    background-color: #fff;
    border-radius: 30rpx;
    padding: 52rpx 40rpx;
    margin-top: 40rpx;
}

.mdlist .item {
    width: 100%;
    box-sizing: border-box;
}

.image-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

    /* 核心：将渐变颜色从黑色改为白色 */
    background: linear-gradient(to bottom,
            /* 从上到下 */
            rgba(255, 255, 255, 0.5),
            /* 顶部：50% 透明度的白色 */
            rgba(255, 255, 255, 0.7) 50%,
            /* 中间点：保持白色半透明，渐变从这里开始 */
            rgba(255, 255, 255, 1) 100%
            /* 底部：完全透明的白色 (图片完全可见) */
        );

    pointer-events: none;
}

