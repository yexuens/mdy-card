.title_box2 {
    position: absolute;
    bottom: 0;
    left: 0;
    font-size: 24rpx;
    font-weight: 500;
    width: 97%;
    /* height: 68rpx; */
    opacity: 0.7;
    color: rgba(255, 255, 255, 1);
    line-height: 68rpx;
    padding-left: 20rpx;
    border-radius: 0 0 30rpx 30rpx;
    background: #00000090;
    white-space: nowrap;
    backdrop-filter: blur(80rpx);
    /* 禁止换行 */
    overflow: hidden;
    /* 隐藏溢出 */
    text-overflow: ellipsis;
    /* 显示省略号 */
}

